# =============================================================================
# Deployment Configuration Template
# =============================================================================
# Copy this file to .env and update the values
# Usage: source .env && ./deploy_all.sh
# =============================================================================

# SSH Configuration
export SSH_USER="ec2-user"
export SSH_KEY="~/.ssh/microservices-key.pem"

# Server IPs (from Terraform outputs)
export SHOP_SERVER_IP="<shop-server-public-ip>"
export STOCK_SERVER_IP="<stock-server-public-ip>"
export STOCK_SERVER_PRIVATE_IP="<stock-server-private-ip>"

# Git Repository
export GIT_REPO_URL="https://github.com/your-org/microservices-architecture.git"
export GIT_BRANCH="main"

# Database Configuration (from Terraform outputs)
export RDS_ENDPOINT="<your-rds-endpoint>"
export DB_USERNAME="postgres"
export DB_PASSWORD="<your-secure-password>"

# Java Configuration
export JAVA_OPTS="-Xms512m -Xmx1024m -XX:+UseG1GC -Dspring.profiles.active=prod"
