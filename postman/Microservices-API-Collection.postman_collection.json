      "name": "Use Case 1 - Check Stock Availability (REST)",
      "item": [
        {
          "name": "Check Stock Availability",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has required fields', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('productId');",
                  "    pm.expect(jsonData).to.have.property('productName');",
                  "    pm.expect(jsonData).to.have.property('availableQuantity');",
                  "    pm.expect(jsonData).to.have.property('available');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{shopApiBase}}/stock/availability?productId=PROD-001&requestedQuantity=10",
              "host": ["{{shopApiBase}}"],
              "path": ["stock", "availability"],
              "query": [
                {
                  "key": "productId",
                  "value": "PROD-001"
                },
