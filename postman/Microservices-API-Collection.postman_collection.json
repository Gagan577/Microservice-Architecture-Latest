    {
      "name": "Use Case 4 - Bulk Stock Update (SOAP)",
      "item": [
        {
          "name": "Bulk Stock Update - Via Shop Service",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"updates\": [\n    {\n      \"productId\": \"PROD-001\",\n      \"warehouseId\": \"WH-001\",\n      \"quantityChange\": 100,\n      \"reason\": \"RESTOCK\"\n    },\n    {\n      \"productId\": \"PROD-002\",\n      \"warehouseId\": \"WH-001\",\n      \"quantityChange\": 50,\n      \"reason\": \"RESTOCK\"\n    },\n    {\n      \"productId\": \"PROD-003\",\n      \"warehouseId\": \"WH-002\",\n      \"quantityChange\": -20,\n      \"reason\": \"ADJUSTMENT\"\n    }\n  ],\n  \"batchId\": \"BATCH-2024-001\",\n  \"performedBy\": \"warehouse-admin\"\n}"
            },
            "url": {
              "raw": "{{shopApiBase}}/warehouse/bulk-update",
              "host": ["{{shopApiBase}}"],
              "path": ["warehouse", "bulk-update"]
            },
            "description": "Use Case 4: Bulk update stock levels across multiple products (uses SOAP internally).\n\n**Protocol**: SOAP\n**Flow**: Shop Management → Product Stock (SOAP)\n\nNote: The Shop Management service exposes this as REST but internally calls the Stock Service via SOAP."
          },
          "response": [
            {
              "name": "Successful Bulk Update",
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "body": "{\n  \"batchId\": \"BATCH-2024-001\",\n  \"totalUpdates\": 3,\n  \"successfulUpdates\": 3,\n  \"failedUpdates\": 0,\n  \"results\": [\n    {\n      \"productId\": \"PROD-001\",\n      \"warehouseId\": \"WH-001\",\n      \"previousQuantity\": 145,\n      \"newQuantity\": 245,\n      \"status\": \"SUCCESS\"\n    },\n    {\n      \"productId\": \"PROD-002\",\n      \"warehouseId\": \"WH-001\",\n      \"previousQuantity\": 80,\n      \"newQuantity\": 130,\n      \"status\": \"SUCCESS\"\n    },\n    {\n      \"productId\": \"PROD-003\",\n      \"warehouseId\": \"WH-002\",\n      \"previousQuantity\": 200,\n      \"newQuantity\": 180,\n      \"status\": \"SUCCESS\"\n    }\n  ],\n  \"completedAt\": \"2024-01-15T11:00:00Z\"\n}"
            }
          ]
        },
        {
          "name": "Direct SOAP Request - Bulk Update",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "text/xml;charset=UTF-8"
              },
              {
                "key": "SOAPAction",
                "value": "bulkUpdateStock"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\" \n                  xmlns:stock=\"http://stock.service.productstock.com/\">\n    <soapenv:Header/>\n    <soapenv:Body>\n        <stock:bulkUpdateStock>\n            <stock:request>\n                <stock:batchId>BATCH-2024-001</stock:batchId>\n                <stock:performedBy>warehouse-admin</stock:performedBy>\n                <stock:updates>\n                    <stock:productId>PROD-001</stock:productId>\n                    <stock:warehouseId>WH-001</stock:warehouseId>\n                    <stock:quantityChange>100</stock:quantityChange>\n                    <stock:reason>RESTOCK</stock:reason>\n                </stock:updates>\n                <stock:updates>\n                    <stock:productId>PROD-002</stock:productId>\n                    <stock:warehouseId>WH-001</stock:warehouseId>\n                    <stock:quantityChange>50</stock:quantityChange>\n                    <stock:reason>RESTOCK</stock:reason>\n                </stock:updates>\n            </stock:request>\n        </stock:bulkUpdateStock>\n    </soapenv:Body>\n</soapenv:Envelope>"
            },
            "url": {
              "raw": "{{stockApiBase}}/soap/stock",
              "host": ["{{stockApiBase}}"],
              "path": ["soap", "stock"]
            },
            "description": "Direct SOAP call to Product Stock service for bulk stock update.\n\n**WSDL**: {{stockApiBase}}/soap/stock?wsdl"
          }
        }
      ]
    },
